{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "target": "es3",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
